# ============================================
# Backend MCP Service - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# cp .env.example .env

# ============================================
# Application Configuration
# ============================================
APP_NAME=Backend MCP Service
DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT=console

# ============================================
# Server Configuration
# ============================================
HOST=0.0.0.0
PORT=8000

# ============================================
# External Services
# ============================================
# Mock Salesforce service URL
MOCK_SALESFORCE_URL=http://localhost:8001
SALESFORCE_REQUEST_TIMEOUT=5.0

# ============================================
# Redis Configuration
# ============================================
# Redis is used for session storage
# Format: redis://[host]:[port]/[database_number]
REDIS_URL=redis://localhost:6379/0
SESSION_TTL_SECONDS=86400

# ============================================
# LangGraph Service Configuration
# ============================================
# Backend LangGraph service URL and settings
LANGGRAPH_URL=http://localhost:8002
LANGGRAPH_API_KEY=
LANGGRAPH_TIMEOUT=30.0

# ============================================
# Celery Configuration (for async tasks)
# ============================================
# Celery broker URL (typically Redis)
# Format: redis://[host]:[port]/[database_number]
CELERY_BROKER_URL=redis://localhost:6379/1
